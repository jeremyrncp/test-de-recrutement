{% for film in films %}
    <a
            role="option"
            href="javascript:MicroModal.show('modal-film-{{ film.id }}')"
    >
        <div class="content">
            <div class="film">
                <img
                        alt="{{ film.name }}"
                        src="images/{{ film.image }}"
                >
                <p>
                    {{ film.name }}<br>
                    <em>Genre : {{ film.genre }}</em>
                </p>
            </div>
        </div>
    </a>
    <div id="modal-film-{{ film.id }}" aria-hidden="true" class="modal micromodal-slide" >
        <div tabindex="-1"  class="modal__overlay" data-micromodal-close>
            <div class="modal__container" role="dialog" aria-modal="true" aria-labelledby="modal-film-{{ film.id }}-title" >
                <header class="modal__header">
                    <h2 class="modal__title" id="modal-film-{{ film.id }}-title">
                        {{ film.name }}
                    </h2>
                    <button class="modal__close" aria-label="Close modal" data-micromodal-close></button>
                </header>

                <div id="modal-film-{{ film.id }}-content" class="modal__content">
                    <img src="images/{{ film.image }}" width="auto" /><br />
                    <em>Genre : {{ film.Genre }}</em>
                </div>
            </div>
        </div>
    </div>

{% else %}
    <div aria-disabled="true">No results found!</div>
{% endfor %}