{% extends 'base.html.twig' %}

{% block title %}Films{% endblock %}

{% block body %}
<style>
    .content { display: flex; }
    .film { display: block; width: 250px; margin-left: 1em; margin-bottom: 1em; text-align: center; }
    .film img { width: 250px; height: auto; margin-bottom: 5px; border: 1px solid black; border-radius: 3px; }

    h1 { text-transform: uppercase; }
    .container { display: block; }
    .text-center { text-align: center; }
    .input-group { display: flex; margin-bottom: 20px;}
    .form-control { width: 100%; padding: 5px;}
    .search-preview{ display: flex; margin-top: 40px; }
    .search-preview a {cursor: pointer; }

    .modal {  display: none;}
    .modal.is-open { display: block; }
</style>
<header class="text-center">
    <h1>Films</h1>
</header>
<div class="container">
    <div
            {{ stimulus_controller('autocomplete', {
                url: path('index', { preview: 10 })
            }) }}
    >
        <form class="input-group">
            <input
                    name="q"
                    value="{{ searchTerm }}"
                    placeholder="Search films by name or genre..."
                    type="search"
                    class="form-control"
                    data-autocomplete-target="input"
            >
        </form>
        <div
                class="search-preview"
                data-autocomplete-target="results"
        ></div>
    </div>
</div>
{% endblock %}
